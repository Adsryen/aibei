    <text class="short_essay_zh_text_short" style="position: relative; left: 118rpx; top: 101rpx; width: 532rpx; height: 80rpx; display: block; box-sizing: border-box">{{short_essay_zh_text_short}}</text>
    <view bindtap="read_more">
        <text style="position: relative; left: 520rpx; top: 136rpx">阅读详情</text>
    </view>

</view>
